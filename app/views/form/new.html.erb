<% if flash[:notice] %>
<div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>

<div class="page-header">
<h2>Create form handler</h2>
</div>


<% if flash[:error] %>
<div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>

<%= form_tag('/new', class:'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag(:email, 'Response Email', class:'col-sm-3 control-label') %>
    <div class="col-sm-9">
    <%= text_field_tag(:email, nil, class:'form-control') %>
    <span class="help-block">Email address form responses will be sent to</span>
    </div>
  </div>
  <div class="form-group">
   <%= label_tag(:success_url, 'Redirect', class:'col-sm-3 control-label') %>
    <div class="col-sm-9">
    <%= text_field_tag(:success_url, nil, class:'form-control') %>
    <span class="help-block">URL to which users will be redirected upon a successful form submission</span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        <label>
          By clicking "Create", you agree to the <a href="/legal/terms">terms of service</a>.
        </label>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= submit_tag("Create", class:'btn btn-primary btn-lg') %>
    </div>
  </div>

<% end %>

<script>
$('#nav_new').addClass('active');
</script>